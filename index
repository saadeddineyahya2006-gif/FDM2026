<div class="timer-buttons">
  <button onclick="start()">▶</button>
  <button onclick="stop()">⏸</button>
  <button onclick="addTime(30)">+30</button>
  <button onclick="addTime(60)">+60</button>
  <button onclick="addTime(120)">+120</button>
  <button onclick="toggleFullscreen()">⛶</button>
</div>

<script>
let time=300, interval=null;

function parseTime(){
  let t=document.getElementById("timer").innerText.split(":");
  time=parseInt(t[0])*60+parseInt(t[1]);
}

function update(){
  let m=Math.floor(time/60);
  let s=time%60;
  document.getElementById("timer").innerText=
    String(m).padStart(2,"0")+":"+String(s).padStart(2,"0");
}

function start(){
  parseTime();
  if(interval) return;
  interval=setInterval(()=>{
    if(time<=0){
      stop();
      return;
    }
    time--; 
    update();
  },1000);
}

function stop(){
  clearInterval(interval);
  interval=null;
}

function addTime(sec){
  time+=sec;
  update();
}

function toggleFullscreen(){
  if(!document.fullscreenElement){
    document.documentElement.requestFullscreen();
  }else{
    document.exitFullscreen();
  }
}

document.addEventListener("keydown",e=>{
  if(e.key==="f" || e.key==="F"){
    toggleFullscreen();
  }
});

let motions={A:{a:0,r:0},B:{a:0,r:0}};
function accept(t){motions[t].a++;refresh(t);}
function reject(t){motions[t].r++;refresh(t);}
function refresh(t){
  document.getElementById(t.toLowerCase()+"Acc").innerText=motions[t].a;
  document.getElementById(t.toLowerCase()+"Rej").innerText=motions[t].r;
  document.getElementById(t.toLowerCase()+"Tot").innerText=
    motions[t].a+motions[t].r;
}

document.getElementById("imageInput").addEventListener("change",e=>{
  let f=e.target.files[0];
  if(!f) return;
  let r=new FileReader();
  r.onload=ev=>document.getElementById("logo").src=ev.target.result;
  r.readAsDataURL(f);
  e.target.style.display="none";
});
</script>

